##########################################################################
##########################################################################
# this container defines the underlying OS for each job when using the workflow
# with --use-conda --use-singularity


container: "docker://continuumio/miniconda3"


from snakemake.utils import min_version

# set minimum snakemake version
min_version("6.14.0")

##########################################################################
##########################################################################
##
##                                Rules
##
##########################################################################
##########################################################################


# load config
configfile: "config/config.yaml"


# Path to report rst file
report: "report/workflow.rst"


# Set local rule that could be launch without submiting to cluster because ultra quick
localrules:
    all,
    clean,


##########################################################################
# Load rules
##########################################################################


include: "rules/common.smk"
include: "rules/utils.smk"
include: "rules/ncbi_blast.smk"
include: "rules/virsorter.smk"
include: "rules/hmmer.smk"
include: "rules/prokka.smk"
include: "rules/vConTACT2.smk"
include: "rules/deepvirfinder.smk"
include: "rules/postprocess_detection.smk"
include: "rules/checkv.smk"
include: "rules/dram.smk"
include: "rules/visualisation.smk"
include: "rules/virome_map_reads_to_viral_contigs.smk"
include: "rules/postprocess_reads_count.smk"
include: "rules/iphop.smk"


##########################################################################
##########################################################################


rule all:
    input:
        get_final_output(
            outdir=OUTPUT_FOLDER,
            contigs_list=CONTIGS_DICT.keys(),
        ),


##########################################################################
##########################################################################


rule clean:
    input:
        os.path.join(OUTPUT_FOLDER, "logs"),
    shell:
        """rm -rf {input}"""


